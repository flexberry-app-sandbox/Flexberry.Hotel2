<h3 class="ui header">{{t "forms.i-i-s-hotel-а-о-п-и-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерКомнаты
      class=(if (v-get validationModel "номерКомнаты" "isInvalid") "error")
      label=(t "forms.i-i-s-hotel-а-о-п-и-e.номерКомнаты-caption")
      data-test-i-i-s-hotel-а-о-п-и-e-номерКомнаты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерКомнаты" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-hotel-а-о-п-и-e.персонал-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.персонал
      relationName="персонал"
      projection="ПерсоналL"
      title=(t "forms.i-i-s-hotel-а-о-п-и-e.персонал-caption")
      readonly=readonly
      componentName="персоналLookup"
      class=(if (v-get validationModel "персонал" "isInvalid") "error")
      data-test-i-i-s-hotel-а-о-п-и-e-персонал=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "персонал" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-hotel-а-о-п-и-e.админ-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.админ
      relationName="админ"
      projection="АдминL"
      title=(t "forms.i-i-s-hotel-а-о-п-и-e.админ-caption")
      readonly=readonly
      componentName="админLookup"
      class=(if (v-get validationModel "админ" "isInvalid") "error")
      data-test-i-i-s-hotel-а-о-п-и-e-админ=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "админ" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-hotel-а-о-п-и-e.тЧ1-caption"}}</label>
    {{flexberry-groupedit
      componentName="тЧ1GroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.тЧ1
      content=model.тЧ1
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "тЧ1" "isInvalid") "error")
      data-test-i-i-s-hotel-а-о-п-и-e-тЧ1=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "тЧ1" "message")}}
  </div>
</form>

<h3 class="ui header">{{t "forms.i-i-s-hotel-ж-р-и-г-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерЖурн
      class=(if (v-get validationModel "номерЖурн" "isInvalid") "error")
      label=(t "forms.i-i-s-hotel-ж-р-и-г-e.номерЖурн-caption")
      data-test-i-i-s-hotel-ж-р-и-г-e-номерЖурн=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерЖурн" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-hotel-ж-р-и-г-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-hotel-ж-р-и-г-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-hotel-ж-р-и-г-e.админ-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.админ
      relationName="админ"
      projection="АдминL"
      title=(t "forms.i-i-s-hotel-ж-р-и-г-e.админ-caption")
      readonly=readonly
      componentName="админLookup"
      class=(if (v-get validationModel "админ" "isInvalid") "error")
      data-test-i-i-s-hotel-ж-р-и-г-e-админ=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "админ" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-hotel-ж-р-и-г-e.тЧ2-caption"}}</label>
    {{flexberry-groupedit
      componentName="тЧ2GroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.тЧ2
      content=model.тЧ2
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "тЧ2" "isInvalid") "error")
      data-test-i-i-s-hotel-ж-р-и-г-e-тЧ2=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "тЧ2" "message")}}
  </div>
</form>
